{
  "name": "csv-utils",
  "version": "1.0.0",
  "description": "A node.js module for processing csv data",
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ignore-path .gitignore **/*.js",
    "test": "ava test/*_spec.js",
    "test-debug": "node --inspect --debug-brk node_modules/ava/profile.js test/csv_spec.js",
    "test-watch": "npm test -- --watch"
  },
  "main": "index.js",
  "repository": "git@github.com:j1wu/csv-utils.git",
  "author": "j1wu <ji.wu@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.19.1",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "ghooks": "^2.0.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
